{% extends 'base.html.twig' %}
{% block body %}

<h2>List Tasks</h2>

<table class="table table-striped">
    <thead>
      <tr>
        <th>Subject</th>
        <th>Date</th>
		<th></th>
      </tr>
    </thead>
    <tbody>
	{% for single in tasks %}
      <tr>
        <td>{{single.subject}}</td>
        <td>{{single.date|date('d.m.Y')}}</td>
		<td>
			<a href="/view/{{single.taskLink}}" role=button class="btn btn-primary">View</a>
			<a href="/delete/{{single.taskLink}}" role=button class="btn btn-danger">Delete</a>
		</td>
      </tr>
	{% endfor %}
    </tbody>
  </table>
<hr>
<a href="/read" role=button class="btn btn-success">Read New Jpg</a>

{% endblock %}